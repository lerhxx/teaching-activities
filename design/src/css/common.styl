@import 'variable'
@import 'funs'

body,
ul,
li,
p,
h1,
h2,
h3,
h4,
h5,
h6,
hr { 
	padding: 0;
	margin: 0;
}
body 
	height 100vh
	box-sizing border-box

ul
	display flex
	flex-wrap wrap
	justify-content center
	list-style none

a 
	text-decoration none
	color #000

.color-r
	color red
.color-b
	color #40bfce
.color-g
	color #bbb6b6
.padding-top
	padding-top nav-height
.text-ellipsis
	text-overflow ellipsis
	white-space nowrap
	overflow hidden

#app
	relative()
.wrapper
	relative()
	min-height calc(100vh - 48px)
	padding-bottom 48px
.time
	margin-bottom 10px
	font-size 14px
.per-list
	relative()
	margin-bottom 10px
	text-align center
	&:before
		absolute(top 0 bottom 0 left 0 right 0)
		width 50%
		min-width 150px
		height 0px
		margin auto
		border 1px solid #000
		content ''
		z-index -1
.per-list-item
	a
		display block
		padding 10px 35px
		border 1px solid #000
		background #fff
	&.active
		a
			color #fff
			background #000